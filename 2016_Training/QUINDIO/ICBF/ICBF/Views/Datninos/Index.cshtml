@model IEnumerable<ICBF.Models.Datninos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>REGISTRO DE NIÑOS</h2>

<p>
    @Html.ActionLink("REGISTRAR NIÑO", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE
        </th>
        <th>
            TIPO DE SANGRE
        </th>
        <th>
           CIUDAD DE NACIMIENTO
        </th>
        <th>
            FECHA DE NACIMIENTO
        </th>
        <th>
            DIRECCION
        </th>
        <th>
            TELEFONO
        </th>
        <th>
            EPS
        </th>
        <th>
            ACUDIENTE
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomape)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tip_san)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ciu_nac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fec_nac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dir)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eps)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dacudiente.nom_ape)
        </td>
        <td>
            @Html.ActionLink("EDITAR", "Edit", new { id=item.niup }) |
            @Html.ActionLink("DETALLES", "Details", new { id=item.niup }) |
            @Html.ActionLink("ELIMINAR", "Delete", new { id=item.niup })
        </td>
    </tr>
}

</table>
